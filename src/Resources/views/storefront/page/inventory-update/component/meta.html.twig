{% sw_extends '@Storefront/storefront/layout/meta.html.twig' %}

{% block layout_head_meta_tags_opengraph %}

	<meta property="og:type" content="player"/>
	<meta property="og:site_name" content="{{ config('core.basicInformation.shopName') }}"/>
	<meta property="og:url" content="{{ seoUrl('frontend.product.inventory.update') }}"/>
	<meta property="og:title" content="{{ metaTitle }}"/>

	<meta property="og:description" content="{{ metaDescription }}"/>

	<meta name="twitter:card" content="product"/>
	<meta name="twitter:site" content="{{ config('core.basicInformation.shopName') }}"/>
	<meta name="twitter:title" content="{{ metaTitle }}"/>
	<meta name="twitter:description" content="{{ metaDescription }}"/>
	
{% endblock %}

{% block layout_head_title_inner %}
	{{ pageTitle }}
{% endblock %}

{% block layout_head_canonical %}

	<link rel="canonical" href="{{ seoUrl('frontend.product.inventory.update') }}"/>
{% endblock %}
